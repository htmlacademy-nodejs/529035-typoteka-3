extends ../layot

block content
  if articles
    main
      section.search-page
        .search-page__wrapper
          h1 Поиск с артиклями
          .search.search-page__form
            form(action='/search', method='get')
              label
                input(type='text', placeholder='Что ищем?', value=query, name=`query`)
              button.search__button.button.button--transparent(type='submit') Найти
            .search__result
              each article in articles
                time.search__date(datetime='2019-03-21T20:33')=article.createdDate
                a.search__link= article.title
  else if error
    main
      section.search-page
        .search-page__wrapper
          h1 Поиск с ошибкой
          .search.search-page__form
            form(action='/search', method='get')
              label
                input(type='text', placeholder='Что ищем?', name='query')
              button.search__button.button.button--transparent(type='submit') Найти
  else
    main
      section.search-page
        .search-page__wrapper
          h1 Поиск старт
          .search.search-page__form
            form(action='/search', method='get')
              label
                input(type='text', placeholder='Что ищем?', name='query')
              button.search__button.button.button--transparent(type='submit') Найти

